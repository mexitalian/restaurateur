extends "base.html"
- load static wagtailcore_tags wagtailimages_tags restaurant_tags

block body_class
  template-homepage

block banner_cta
  .banner-buttons
    a.button.button-primary(href='#reservations') Make a reservation
    if page.specials
      a.button.button-secondary(href='#specials') See {{page.specials}}

block content
  #about.content-block.about-block
    .about-block-inner.container
      .clear.text-center
        .about-block-content.col-6-desktop
          h2= page.headline
          {{ page.intro|richtext }}
        .about-block-img.col-6-desktop.none-tablet.block-desktop
          {% image page.intro_image original as i_img %}
          img(src="{{i_img.url}}" alt="{{i_img.alt}}")

  #specials.content-block.ingredients-block
    .ingredients-block-inner.container.clear
      .feature-box.text-center.col-12.col-6-desktop.right
        .feature-box-content
          if page.specials
            - menu_section id=page.specials.id
          else
            h2 Call us to ask about Today's specials



