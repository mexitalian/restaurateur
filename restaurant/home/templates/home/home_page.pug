        input#navigation-toggle-checkbox.navigation-toggle-checkbox.sr(type='checkbox', name='navigation-toggle-checkbox')
        label.navigation-toggle-label(for='navigation-toggle-checkbox', onclick='')
          span.navigation-toggle-label-inner
            span.sr Navigation
        .navigation
          ul.navigation-menu
            li.navigation-item
              a(href='#about') About
            li.navigation-item
              a(href='#ingredients') Ingredients
            li.navigation-item
              a(href='#menu') Menu
            li.navigation-item
              a(href='#reviews') Reviews
            li.navigation-item
